{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",

    /* Modules */
    "module": "commonjs",

    /* Emit */
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
